<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= paragraph1 %></p>

<!-- adding the compose posts in the home.ejs using the ejs script tags -->
<% posts.forEach(function(post){%>
    <h1><%= post.inputTitle %></h1>
    <p>
        <%= post.inputBody.substring(0, 100) + "..." %> 
        <a href="/post/<%=post._id%>">Read More</a>
    </p>
<%})%>

